<div class="page-header">
  <h1>New Attendance</h1>
</div>

<%= form_tag(attendances_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :meeting_id, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-2">

          <select name="meeting_id">
      <% @meetings.each do |meeting| %>
      <% course = Course.find_by(:id => meeting.course_id) %>
        <option value="<%= meeting.id %>"><%= meeting.held_on %> <%= course.department %> <%= course.number %> <%= course.title %>
        </option> 
      <% end %>

        </select>
      <!--<%= number_field_tag :meeting_id, nil, class: 'form-control' %>-->


    </div>
  </div>

    <div class="form-group">
    <%= label_tag :student_id, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-2">

      <select name="student_id">


<% @students.each do |student| %>

  <option value="<%= student.id %>"><%= student.first_name %> <%= student.last_name %> </option> 
<% end %>

</select>


      <!--<%= number_field_tag :student_id, nil, class: 'form-control' %>-->




    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Attendance", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
